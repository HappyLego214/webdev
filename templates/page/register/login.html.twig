{% extends 'registerbase.html.twig' %}

{% block main %}
 <main id="login-main">  
    <div class="first-layer-container">
        <div class="login-center-container">
            <div class="center-login-container">
                <div class="login-title">
                    <h2>Welcome Back</h2>
                </div>
                {% if error %}
                    <div class="errorMsg">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('app_login') }}" id="login-form" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Email address</label>
                        <input type="email" name="_username" class="form-control" id="loginEmail" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="_password" class="form-control" id="loginPassword">
                        <div id="emailHelp" class="form-text">
                        <a href="">Forgot Password?</a></div>
                    </div>
                    <div class="accSubmit-form-btn-container">
                        <button type="submit" class="btn btn-primary">Login to 'Company Name'</button>
                        <a href="{{ path('app_homepage') }}">Return To Website</a>
                    </div>
                    <input type="hidden" name="go_to" value="{{ path('app_loginSuccess') }}">
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}